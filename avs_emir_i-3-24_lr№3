#include <iostream>
using namespace std;

int main() {
    float single_precision;
    double double_precision;

    cout << "Введите значение: ";
    cin >> single_precision;

    double_precision = static_cast<double>(single_precision);

    double difference = double_precision - static_cast<double>(single_precision);

    cout << "Одиночная точность (float): " << single_precision << endl;
    cout << "Двойная точность (double): " << double_precision << endl;
    cout << "Разница: " << difference << endl;

    return 0;
}
